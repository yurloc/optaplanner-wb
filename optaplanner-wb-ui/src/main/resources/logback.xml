<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss,SSS} [%thread] %-5level %logger{30} - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="org.errai" level="info"/>

  <root level="info">
    <appender-ref ref="consoleAppender"/>
  </root>

</configuration>
